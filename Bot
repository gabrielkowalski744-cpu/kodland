import discord
import os
import random
from discord.ext import commands
intents = discord.Intents.default()
intents.message_content = True
bot = commands.Bot(command_prefix='$', intents=intents)
@bot.event
async def on_ready():
    print(f'Zalogowaliśmy się jako {bot.user}')
@bot.command()
async def hello(ctx): # $hello
    await ctx.send(f'Cześć, jestem bot{bot.user}!')
@bot.command()
async def heh(ctx, count_heh = 5):
    await ctx.send("he" * count_heh)
@bot.command()
async def Gra(ctx): # $hello
    await ctx.send'@bot.command
async def hello(ctx): # $hello
    await ctx.send('https://kids.nationalgeographic.com/games/action-adventure/article/recycle-roundup-new')
@bot.command()
async def mem(ctx):
    images = os.listdir("C:\\Users\\XXX\\Desktop\\kodland\\Image")
    random_meme = random.choice(images)




    with open('C:\\Users\\XXX\\Desktop\\kodland\\Image\\'+random_meme, 'rb') as f:
        # Zapiszmy przekonwertowany plik biblioteki Discord w tej zmiennej!
        picture = discord.File(f)
    # Możemy następnie wysłać ten plik jako parametr!
    await ctx.send(file=picture)
bot.run("")
